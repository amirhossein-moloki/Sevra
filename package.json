{
  "name": "sevra",
  "version": "1.0.0",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx src/server.ts",
    "start": "node dist/server.js",
    "build": "tsc",
    "lint": "eslint . --ext .ts",
    "test": "cross-env NODE_ENV=test dotenv -e .env.test -- bash -c 'sudo docker compose up -d db && sleep 2 && sudo -E npx prisma migrate reset --force && jest --runInBand --detectOpenHandles'",
    "test:unit": "cross-env NODE_ENV=test dotenv -e .env.test -- jest --testPathIgnorePatterns=e2e",
    "test:e2e": "cross-env NODE_ENV=test dotenv -e .env.test -- jest --testPathPattern=e2e --runInBand",
    "test:coverage": "cross-env NODE_ENV=test dotenv -e .env.test -- jest --coverage --runInBand"
  },
  "dependencies": {
    "@sentry/node": "^10.38.0",
    "@sentry/profiling-node": "^10.38.0",
    "argon2": "^0.44.0",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "cuid": "^3.0.0",
    "date-fns": "^3.6.0",
    "date-fns-tz": "^3.2.0",
    "dotenv-cli": "^7.4.2",
    "express": "^4.19.2",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "http-status": "^1.7.4",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "pino-http": "^10.1.0",
    "pino-pretty": "^13.1.3",
    "sharp": "^0.33.5",
    "smsir-js": "^1.3.3",
    "swagger-ui-express": "^5.0.1",
    "tsx": "^4.11.2",
    "uuid": "^8.3.2",
    "yamljs": "^0.3.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.2.0",
    "@prisma/client": "^5.14.0",
    "@types/argon2": "^0.14.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/helmet": "^0.0.48",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.12.12",
    "@types/supertest": "^6.0.2",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/yamljs": "^0.2.34",
    "@typescript-eslint/eslint-plugin": "^7.10.0",
    "@typescript-eslint/parser": "^7.10.0",
    "cross-env": "^10.1.0",
    "dotenv": "^16.6.1",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "prisma": "^5.14.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.4.6",
    "typescript": "^5.4.5"
  }
}
