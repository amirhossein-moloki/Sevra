# Example environment for running tests (copy to .env.test)
# Keep secrets dummy for tests; replace only in CI as needed.

# --- App ---
NODE_ENV="test"
APP_NAME="sevra-test"
PORT=3001
LOG_LEVEL="warn"

# --- JWT / Security ---
JWT_ACCESS_SECRET="test-access-secret-please-change"
JWT_REFRESH_SECRET="test-refresh-secret-please-change"
JWT_ACCESS_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"
COOKIE_SECRET="test-cookie-secret"

# --- Database ---
# Use a test database/schema. Example for local Docker Postgres:
DATABASE_URL="postgresql://sevra-dev:sevra-dev-password@localhost:5432/sevra-db"

# --- CORS ---
CORS_ORIGIN="*"
CORS_CREDENTIALS=true

# --- Rate Limiting ---
RATE_LIMIT_ENABLED=false
RATE_LIMIT_STORE="memory"

# --- Webhooks ---
PAYMENT_PROVIDER_WEBHOOK_SECRET="test-secret"

# --- SMS (Mocked in tests if API Key is missing) ---
SMSIR_OTP_TEMPLATE_ID=1
SMSIR_BOOKING_PENDING_TEMPLATE_ID=2
SMSIR_BOOKING_CONFIRMED_TEMPLATE_ID=3
SMSIR_BOOKING_CANCELED_TEMPLATE_ID=4
